{
  "name": "axplain",
  "version": "2.0.0",
  "description": "aXplain - React + redux clone in plain javascript",
  "main": "index.js",
  "scripts": {
    "start": "set NODE_ENV=dev && npm-run-all --parallel dev:*",
    "start-linux": "export NODE_ENV=dev && npm-run-all --parallel dev:*",
    "dev:server": "lite-server --config bs-config.js",
    "dev:css": "node-sass-chokidar src/ -o ./ --watch --recursive --source-map true",
    "test": "jest --watch",
    "build": "npm-run-all build:*",
    "build:assets": "copyfiles assets/**/*.* index.html dist",
    "build:css": "npm-run-all -p build-css:*",
    "build-css:css": "node-sass-chokidar src/ -o dist --recursive",
    "build-css:autoprefixer": "postcss dist/*.css --use autoprefixer -d dist",
    "build:js": "npm-run-all build:js-parcel build:js-terser",
    "build:js-parcel": "parcel build index.js --no-minify",
    "build:js-terser": "terser dist/index.js --keep-classnames --output dist/index.js",
    "build:polyfill": "parcel build polyfill/polyfill.js",
    "buildserver": "set NODE_ENV=prod && lite-server --config bs-config-build.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/axelseis/aXplain.git"
  },
  "author": "Axel claver",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "autoprefixer": "^7.2.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "copyfiles": "^1.2.0",
    "jest": "^22.1.1",
    "lite-server": "^2.3.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.9.7",
    "postcss-cli": "^5.0.0",
    "postcss-modules": "^1.1.0",
    "regenerator-runtime": "^0.11.1"
  },
  "dependencies": {
    "promise-polyfill": "^7.0.0",
    "whatwg-fetch": "^2.0.3"
  }
}
