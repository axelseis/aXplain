{
  "name": "axplain",
  "version": "2.0.0",
  "description": "aXplain - plain javascript Store+Router+Component",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=dev && npm-run-all --parallel dev:*",
    "dev:server": "node-dev server.js",
    "dev:css": "node-sass src/ -o src/ --watch --recursive --source-map true",
    "build": "webpack --env=wp_frontend",
    "prod:server": "node server.js",
    "prod": "set NODE_ENV=prod && npm-run-all build prod:server",
    "deploy": "set NODE_ENV=prod && npm-run-all build deploy:firebase",
    "deploy:firebase": "firebase deploy",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/axelseis/aXplain.git"
  },
  "author": "Axel claver",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/jest": "^22.0.1",
    "autoprefixer": "^7.2.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.1.0",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.5.3",
    "cors-anywhere": "^0.4.1",
    "css-loader": "^1.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "express": "^4.16.4",
    "extract-loader": "^3.0.0",
    "jest": "^22.1.1",
    "livereload": "^0.7.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-dev": "^3.1.3",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.2",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cli": "^5.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.1.0",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "fullscreen-polyfill": "^1.0.2",
    "node-fetch": "^3.1.1",
    "promise-polyfill": "^7.0.0",
    "whatwg-fetch": "^2.0.3"
  }
}
